{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "custom": false,
      "customDuotone": false,
      "customGradient": false,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "base",
          "color": "#ffffff",
          "name": "Base"
        },
        {
          "slug": "contrast",
          "color": "#111111",
          "name": "Contrast"
        },
        {
          "slug": "primary",
          "color": "#0066cc",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#ff4444",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#f8fafc",
          "name": "Accent"
        },
        {
          "slug": "neutral",
          "color": "#64748b",
          "name": "Neutral"
        },
        {
          "slug": "success",
          "color": "#22c55e",
          "name": "Success"
        }
      ]
    },
    "typography": {
      "customFontSize": false,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "Poppins, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "Poppins",
          "slug": "poppins"
        },
        {
          "fontFamily": "Georgia, 'Times New Roman', serif",
          "name": "Serif",
          "slug": "serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.125rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.25rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "1.5rem",
          "name": "XX Large"
        },
        {
          "slug": "xxx-large",
          "size": "2rem",
          "name": "XXX Large"
        }
      ]
    },
    "spacing": {
      "custom": false,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "slug": "10",
          "size": "0.5rem",
          "name": "1"
        },
        {
          "slug": "20",
          "size": "1rem",
          "name": "2"
        },
        {
          "slug": "30",
          "size": "1.5rem",
          "name": "3"
        },
        {
          "slug": "40",
          "size": "2rem",
          "name": "4"
        },
        {
          "slug": "50",
          "size": "3rem",
          "name": "5"
        },
        {
          "slug": "60",
          "size": "4rem",
          "name": "6"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "border": {
      "custom": false,
      "radius": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--poppins)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--20)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--contrast)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "500"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500"
        }
      }
    },
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "core/post-content": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.65"
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "width": "4px",
            "style": "solid",
            "color": "var(--wp--preset--color--primary)"
          }
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--30)"
          }
        }
      }
    }
  }
}